# syntax=docker/dockerfile:1
FROM node:18 as base

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
# A wildcard is used to ensure both package.json AND package-lock.json are copied
# where available (npm@5+)
COPY barber-website/frontend/package*.json ./

# If you are building your code for production
# RUN npm ci --only=production
RUN npm install

# Bundle app source
COPY barber-website/frontend/ .

# Export ports
ENV PORT=8080
EXPOSE 8080/tcp

# For testing
FROM base as test
RUN apt-get update
RUN apt-get install -y xvfb libgbm-dev libnss3 libgtk2.0-0 libxss1
# libnotify-dev libgconf-2-4 libasound2 
CMD npm run serve

# For testing and scanning
FROM base as test-scan
RUN npm run test
RUN npm run sonar-scanner

# For production
FROM base as production
CMD npm run serve
