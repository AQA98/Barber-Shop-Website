# syntax=docker/dockerfile:1
FROM alpine:3.14 AS base

RUN apk update && apk add npm

RUN mkdir /frontend
COPY barber-website/frontend/ frontend/
WORKDIR frontend/

RUN npm install

ENV PORT=80
EXPOSE 80/tcp

# For production
FROM base AS production
CMD npm run serve

# For testing
#FROM base AS test
#RUN npm run test
