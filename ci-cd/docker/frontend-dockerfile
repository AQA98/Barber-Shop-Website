# syntax=docker/dockerfile:1
FROM alpine:3.14 AS base

RUN apk update && apk add npm

RUN mkdir /frontend
COPY barber-website/frontend/ frontend/
WORKDIR frontend/

RUN npm install

ENV PORT=8080
EXPOSE 8080/tcp

FROM cypress/base AS testbase

RUN mkdir /frontend
COPY barber-website/frontend/ frontend/
WORKDIR frontend/

RUN npm install

ENV PORT=8080
EXPOSE 8080/tcp

# For production
FROM base AS production
CMD npm run serve

# For testing
FROM testbase AS test
RUN npm run serve
RUN sleep 10
RUN npm run test
