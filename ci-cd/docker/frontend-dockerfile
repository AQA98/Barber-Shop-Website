# syntax=docker/dockerfile:1
FROM alpine:3.14 AS base

RUN apk update && apk add npm

RUN mkdir /frontend
COPY barber-website/frontend/ frontend/
WORKDIR frontend/

RUN npm install

ENV PORT=8080
EXPOSE 8080/tcp

# For testing
FROM base AS test
# RUN npm run test-unit

# For testing and scanning
FROM base AS test-scan
# RUN npm run test-unit
# RUN npm run sonar-scanner

FROM base AS production
CMD npm run serve
